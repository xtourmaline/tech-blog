<div class="box">
    <h2 class="subtitle has-text-weight-bold grabID" id="{{blogPost.id}}">Edit Blog Post</h2>

    <form class="form">
        <div class="field">
            <label class="label">Title:</label>
            <div class="control">
                <input class="input" type="text" id="title-edit" placeholder="Enter title" value="{{blogPost.title}}">
            </div>
        </div>

        <div class="field">
            <label class="label" for="content-edit">Content:</label>
            <textarea class="textarea" type="text" rows="10" id="content-edit" placeholder="Description">{{blogPost.content}}</textarea>
        </div>
        <br>

        <div class="field">
            <a class="button is-info" id="update" type="click">
                Finish Edit
            </a>
        </div>
    </form>
</div>

<script src="/js/edit.js"></script>